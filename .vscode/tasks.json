{
  "version": "2.0.0",
  "tasks": [
    // --- LINUX ---
    {
      "label": "Build Debug Linux",
      "command": "dotnet", "type": "process",
      "args": [
        "build", 
        "${workspaceFolder}/SummerGUI.Demo.csproj",
        "-c", "Debug", 
        "-r", "linux-x64", 
        "--self-contained", "false"
      ],
    },
    {
      "label": "Build Release Linux",
      "command": "dotnet", "type": "process",      
      "args": [
        "build", 
        "${workspaceFolder}/SummerGUI.Demo.csproj",
        "-c", "Release", 
        "-r", "linux-x64", 
        "--self-contained", "true"
      ],
    },
    // --- WINDOWS ---
    {
      "label": "Build Debug Windows",
